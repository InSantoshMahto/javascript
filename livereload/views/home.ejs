        <script>
        var evtSource = new EventSource("http://localhost/event");
        evtSource.onmessage = function(e) {
            console.log(`console logs: evtSource.onmessage -> e`, e);
            console.log('onMsg: ' + e.data);
        }
        evtSource.onerror = function(e) {
            console.log('error', e);
            evtSource.close();
        }
    </script>
